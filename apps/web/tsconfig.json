{
	"extends": "@haitch-ui/configs/tsconfig/nextjs.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@components/*": ["../../packages/components/src/*"],
			"@/*": ["./*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", "next.config.mjss", ".next/types/**/*.ts", "**/*.mdx"],
	"exclude": ["node_modules"]
}
