{
	"extends": "@haitch-ui/configs/tsconfig/nextjs.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@components/*": ["../../packages/components/src/*"],
			"@/*": ["./*"],
			"@haitch-ui/react": ["../../packages/react/src/index.ts"],
			"@haitch-ui/react/*": ["../../packages/react/src/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", "next.config.js", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
