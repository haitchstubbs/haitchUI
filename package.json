{
  "name": "@haitch/ui",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",

    "test": "turbo run test --filter=@haitch/tests",
    "test:watch": "turbo run test:watch --filter=@haitch/tests",
    "test:ui": "turbo run test:ui --filter=@haitch/tests",

    "test:tests": "npm run -w @haitch/tests test"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.7.0",
    "typescript": "5.9.2"
  },
  "overrides": {
    "@floating-ui/react": "^0.26.0",
    "@tabler/icons-react": "^3.36.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "next": "16.0.10",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2"
  },
  "engines": {
    "node": ">=20 <23"
  },
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
