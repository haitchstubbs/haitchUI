{
	"name": "@haitch/monorepo",
	"private": true,
	"license": "MIT",
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"dev:watch": "turbo run dev:watch --ui=tui",
		"lint": "turbo run lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"check-types": "turbo run check-types",
		"test": "turbo run test --filter=@haitch/tests",
		"test:watch": "turbo run test:watch --filter=@haitch/tests",
		"test:ui": "turbo run test --filter=@haitch/tests",
		"test:tests": "npm run -w @haitch/tests test"
	},
	"devDependencies": {
		"prettier": "^3.7.4",
		"turbo": "^2.7.0",
		"typescript": "5.9.2",
		"@haitch/eslint-config": "workspace:*",
		"@haitch/ui": "workspace:*",
		"@haitch/typescript-config": "workspace:*",
		"@haitch/core": "workspace:*",
		"@haitch/tests": "workspace:*",
		"@haitch/react-popover": "workspace:*",
		"@haitch/react-slot": "workspace:*",
		"@haitch/react-rect": "workspace:*",
		"@haitch/react-virtual-element": "workspace:*",
		"@haitch/react-overlay": "workspace:*",
		"@haitch/react-compose-refs": "workspace:*",
		"@haitch/react-context-menu": "workspace:*"
		
	},
	"overrides": {
		"next": "16.0.10",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"@types/react": "19.2.2",
		"@types/react-dom": "19.2.2",
		"@floating-ui/react": "^0.26.0"
	},
	"packageManager": "pnpm@10.0.0",
	"engines": {
		"node": ">=20"
	},
	"workspaces": [
		"apps/*",
		"packages/*",
		"packages/primitives/*",
		".devtools/**"
	]
}
