{
	"name": "@haitch-ui/tailwind-config",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"main": "./dist/tailwind.config.js",
	"module": "./dist/tailwind.config.js",
	"types": "./dist/tailwind.config.d.ts",
	"exports": {
		".": {
			"types": "./dist/tailwind.config.d.ts",
			"import": "./dist/tailwind.config.js"
		},
		"./preset": {
			"types": "./dist/tailwind.config.d.ts",
			"import": "./dist/tailwind.config.js"
		},
		"./globals.css": {
			"style": "./src/styles/globals.css",
			"default": "./src/styles/globals.css"
		}
	},
	"files": [
		"dist",
		"src/styles/globals.css"
	],
	"scripts": {
		"build": "tsup",
		"build:watch": "tsup --watch",
		"dev": "tsup --watch",
		"dev:watch": "tsup --watch",
		"lint": "eslint . --max-warnings 0",
		"check-types": "tsc --noEmit"
	},
	"dependencies": {
		"@tailwindcss/postcss": "^4.1.0",
		"clsx": "^2.1.1",
		"cmdk": "^1.1.1",
		"date-fns": "^4.1.0",
		"embla-carousel-react": "^8.6.0",
		"postcss": "^8.5.3",
		"react-day-picker": "^9.13.0",
		"tailwind-merge": "^3.4.0",
		"tailwindcss": "^4.1.0",
		"tw-animate-css": "^1.4.0"
	},
	"devDependencies": {
		"@haitch-ui/configs": "workspace:*",
		"prettier": "^3.7.4",
		"tsup": "^8.5.1",
		"typescript": "5.9.2"
	}
}
